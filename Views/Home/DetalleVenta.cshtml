@model Proyecto_Gestion_Ventas.Models.Venta

@{
    ViewData["Title"] = "Detalle de Venta";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h1>Detalle de Venta #@Model.IdVenta</h1>
        </div>
        <div class="col-auto">
            <a asp-action="DescargarFacturaPDF" asp-route-id="@Model.IdVenta" class="btn btn-outline-primary">
                <i class="bi bi-file-pdf"></i> Descargar Factura
            </a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Información de la Venta</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">N° de Venta:</dt>
                        <dd class="col-sm-8">@Model.IdVenta</dd>

                        <dt class="col-sm-4">Cliente:</dt>
                        <dd class="col-sm-8">@Model.NombreCliente</dd>

                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Total:</dt>
                        <dd class="col-sm-8">@Model.Total.ToString("C")</dd>

                        <dt class="col-sm-4">Registrado por:</dt>
                        <dd class="col-sm-8">@Model.AdicionadoPor</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h5>Detalles de la Venta</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.DetallesVenta != null && ViewBag.DetallesVenta.Count > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in ViewBag.DetallesVenta)
                        {
                            <tr>
                                <td>@detalle.NombreProducto</td>
                                <td>@((detalle.SubTotal / detalle.Cantidad).ToString("C"))</td>
                                <td>@detalle.Cantidad</td>
                                <td>@detalle.SubTotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Total:</th>
                            <th>@Model.Total.ToString("C")</th>
                        </tr>
                    </tfoot>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    No hay detalles disponibles para esta venta.
                </div>
            }
        </div>
    </div>

    <!-- Sección de Factura -->
    <div class="card mt-4 border-primary">
        <div class="card-header bg-primary text-white">
            <h5><i class="bi bi-receipt"></i> FACTURA</h5>
        </div>
        <div class="card-body">

            <!-- Sección de encabezado de la factura (modificada) -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="mb-2">Factura N°: @ViewBag.NumeroFactura</h6>
                    <p class="mb-1">Fecha: @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="col-md-6 text-end">
                    <h6 class="mb-2">DATOS DEL CLIENTE:</h6>
                    <p class="mb-1"><strong>@Model.NombreCliente</strong></p>
                    @if (ViewBag.ClienteDireccion != null)
                    {
                        <p class="mb-1">Dirección: @ViewBag.ClienteDireccion</p>
                    }
                    @if (ViewBag.ClienteTelefono != null)
                    {
                        <p class="mb-1">Teléfono: @ViewBag.ClienteTelefono</p>
                    }
                    @if (ViewBag.FechaRegistroCliente != null)
                    {
                        <p class="mb-1">Cliente desde: @ViewBag.FechaRegistroCliente</p>
                    }
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Precio Unit.</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.DetallesVenta != null)
                        {
                            foreach (var detalle in ViewBag.DetallesVenta)
                            {
                                decimal precioUnitario = (decimal)(detalle.SubTotal / detalle.Cantidad);
                                <tr>
                                    <td>@detalle.NombreProducto</td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-end">@precioUnitario.ToString("C")</td>
                                    <td class="text-end">@detalle.SubTotal.ToString("C")</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                            <td class="text-end">@ViewBag.Subtotal.ToString("C")</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-end"><strong>IVA (@ViewBag.PorcentajeIVA%):</strong></td>
                            <td class="text-end">@ViewBag.Impuesto.ToString("C")</td>
                        </tr>
                        <tr class="table-primary">
                            <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-end"><strong>@ViewBag.Total.ToString("C")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <!-- Sección de condiciones de pago (modificada) -->
            <div class="row mt-4">
                <div class="col-md-8">
                    <h6>CONDICIONES Y FORMAS DE PAGO</h6>
                    @if (ViewBag.FormaPago != null)
                    {
                        <p>Forma de pago: <strong>@ViewBag.FormaPago</strong></p>
                    }
                    else
                    {
                        <p>El pago se realizó al contado.</p>
                    }
                    @if (ViewBag.NotasAdicionales != null)
                    {
                        <p>@ViewBag.NotasAdicionales</p>
                    }
                    <p>Fecha de compra: @Model.Fecha.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-md-4">
                    <div class="border-top pt-2 mt-2">
                        <p class="text-center mb-0">FIRMA DEL CLIENTE</p>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer text-muted">
            <small>Esta factura es válida como comprobante fiscal. Conserve este documento.</small>
        </div>
    </div>

    <div class="mt-4 mb-4">
        <a asp-action="ListaVentas" class="btn btn-primary">Volver a la Lista</a>
        <a asp-action="Index" class="btn btn-secondary">Ir al Inicio</a>
    </div>
</div>
