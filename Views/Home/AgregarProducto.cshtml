@model Proyecto_Gestion_Ventas.Models.Producto;

<h2>Agregar Producto</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="AgregarProducto" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nombre">Nombre:</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Precio">Precio:</label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" required />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Stock">Stock:</label>
        <input asp-for="Stock" class="form-control" type="number" min="0" required />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Producto</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>