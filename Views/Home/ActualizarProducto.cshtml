@model Proyecto_Gestion_Ventas.Models.Producto

@{
    ViewData["Title"] = "Actualizar Producto";
}

<div class="container">
    <h1>Actualizar Producto</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form asp-action="GuardarProducto" method="post">
        <input type="hidden" asp-for="IdProducto" />
        <input type="hidden" asp-for="FechaRegistro" />

        <div class="form-group mb-3">
            <label asp-for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Precio">Precio</label>
            <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" required />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Stock">Stock</label>
            <input asp-for="Stock" class="form-control" type="number" min="0" required />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="ObtenerTodosProductos" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>