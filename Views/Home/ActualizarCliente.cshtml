@model Proyecto_Gestion_Ventas.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h2>Editar Cliente</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-action="EditarCliente" method="post">
    <input type="hidden" asp-for="IdCliente" />
    <input type="hidden" asp-for="FechaRegistro" />
    <input type="hidden" asp-for="AdicionadoPor" />

    <div class="form-group mb-3">
        <label asp-for="Nombre">Nombre:</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Direccion">Dirección:</label>
        <input asp-for="Direccion" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Telefono">Teléfono:</label>
        <input asp-for="Telefono" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="ObtenerTodosClientes" class="btn btn-secondary">Cancelar</a>
</form>