@model Proyecto_Gestion_Ventas.Models.Cliente

@{
    ViewData["Title"] = "Actualizar Cliente";
}

<div class="container">
    <h1>Actualizar Cliente</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form asp-action="GuardarCliente" method="post">
        <input type="hidden" asp-for="IdCliente" />

        <div class="form-group mb-3">
            <label asp-for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Direccion">Dirección</label>
            <input asp-for="Direccion" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Telefono">Teléfono</label>
            <input asp-for="Telefono" class="form-control" required />
        </div>

        <input type="hidden" asp-for="ModificadoPor" value="Usuario" />

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="ObtenerTodosClientes" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>