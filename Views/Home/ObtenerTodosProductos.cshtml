@model List<Proyecto_Gestion_Ventas.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container">
    <h1>Lista de Productos</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensaje"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <a asp-action="AgregarProducto" class="btn btn-primary mb-3">Nuevo Producto</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Fecha Registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.IdProducto</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Precio.ToString("C")</td>
                    <td>@producto.Stock</td>
                    <td>@producto.FechaRegistro.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="ActualizarProducto" asp-route-id="@producto.IdProducto" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="EliminarProducto" asp-route-id="@producto.IdProducto" class="btn btn-sm btn-danger"
                           onclick="return confirm('¿Está seguro que desea eliminar este producto?')">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>