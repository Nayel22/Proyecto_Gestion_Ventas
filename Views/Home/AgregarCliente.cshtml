@model Proyecto_Gestion_Ventas.Models.Cliente;

<h2>Agregar Cliente</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="AgregarCliente" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nombre">Nombre:</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Direccion">Dirección:</label>
        <input asp-for="Direccion" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Telefono">Teléfono:</label>
        <input asp-for="Telefono" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <input type="hidden" asp-for="AdicionadoPor" value="@User.Identity.Name" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cliente</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>